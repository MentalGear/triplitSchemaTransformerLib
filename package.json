{
    "private": true,
    "name": "triplit-schema-json-schema-transform",
    "description": "",
    "version": "0.0.1",
    "type": "module",
    "author": "mentalgear",
    "scripts": {
        "transform-triplit-to-json": "pnpx tsx preBuildScripts/jsonSchemaFromTriplitSchema.ts > generatedSchemas/jsonSchema.json",
        "transform-triplit-to-zod": "pnpx tsx preBuildScripts/zodSchemaFromTriplitSchema.ts > generatedSchemas/zodSchema.js",
        "prebuildScripts": "echo '-> running prebuild scripts \n --> 1. generating zod validation schemas from triplit schemas: ' & pnpx tsx preBuildScripts/zodFromTriplitSchema.ts > src/lib/validationSchema/segment.js & echo 'success \n'",
        "dev": "npm run prebuildScripts & vite dev",
        "local-triplit-server": "triplit dev --initWithSchema",
        "build": "npm run prebuildScripts & vite build",
        "preview": "vite preview",
        "test": "npm run test:integration && npm run test:unit",
        "test:integration": "playwright test",
        "test:unit": "vitest",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@playwright/test": "^1.44.1",
        "@sveltejs/adapter-auto": "^3.2.2",
        "@sveltejs/adapter-static": "^3.0.1",
        "@sveltejs/kit": "^2.5.10",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@triplit/cli": "^0.3.71",
        "@types/eslint": "8.56.10",
        "@typescript-eslint/eslint-plugin": "^7.13.1",
        "@typescript-eslint/parser": "^7.13.1",
        "@vitest/ui": "^1.5.3",
        "autoprefixer": "^10.4.19",
        "eslint": "^9.4.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "2.39.3",
        "json-schema-to-zod": "^2.1.1",
        "postcss": "^8.4.38",
        "postcss-load-config": "^6.0.1",
        "prettier": "^3.3.1",
        "prettier-plugin-svelte": "^3.2.4",
        "prettier-plugin-tailwindcss": "^0.6.2",
        "sass": "^1.77.4",
        "svelte": "5.0.0-next.153",
        "svelte-check": "^3.8.0",
        "svelte-headless-table": "^0.18.2",
        "tailwindcss": "^3.4.4",
        "ts-to-zod": "^3.8.5",
        "tslib": "^2.6.3",
        "typescript": "^5.4.5",
        "vite": "^5.3.1",
        "vitest": "^1.5.3"
    },
    "dependencies": {
        "@ai-sdk/openai": "^0.0.31",
        "@triplit/client": "^0.3.59",
        "@triplit/db": "^0.3.45",
        "@triplit/svelte": "^0.1.31",
        "ai": "^3.2.0",
        "bits-ui": "^0.21.10",
        "clsx": "^2.1.1",
        "formsnap": "^1.0.0",
        "json-schema-library": "^9.3.5",
        "lucide-svelte": "^0.391.0",
        "mode-watcher": "^0.3.1",
        "sveltekit-superforms": "^2.15.1",
        "tailwind-merge": "^2.3.0",
        "tailwind-variants": "^0.2.1",
        "vaul-svelte": "^0.3.1",
        "xstate": "^5.13.1",
        "zod": "^3.23.8"
    }
}
